<Alloy>
	<Window id="resume_home_win" class="tabContainer" layout="vertical">
		 <Require id="stateBar" type="view" src="includes/custom_state_bar" back="false" reload="true" title="L('home_title')"/>		
		 <ListView id="listViewResume" defaultItemTemplate="templateResume">

            <Templates>

                <ItemTemplate name="templateResume">
                    <ImageView bindId="pic" class="list1Icon" />
                    <Label bindId="name" class="list1Title" />
                    <Label bindId="group" class="list1Subtitle1" />
                    <Label bindId="date" class="list1Subtitle2" />
                </ItemTemplate>
                
                <ItemTemplate name="messageTemplate">
                    <Label bindId="info" class="list1Subtitle2" />
                </ItemTemplate>
                
            </Templates>

            <ListSection id="myEventsListSection" headerTitle="Tus eventos">
            </ListSection>
            
            <ListSection id="myGroupsEventsListSection" headerTitle="De tu interes">
            </ListSection>
            
        </ListView>
        
	</Window>
</Alloy>